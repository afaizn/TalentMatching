generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Candidate {
  id        Int      @id @default(autoincrement())
  name      String
  profile_summmary String
  email     String   @unique
  phone     String
  address  String
  last_education String
  last_role String
  last_salary Int
  salary_expectation Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  CompanyId Int?
  company Company? @relation(fields: [CompanyId], references: [id])
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  candidates Candidate[]
}